<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/signal_indicator_1" />

        <TextView
            android:id="@+id/device_rssi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="-176 dBm"
            android:textColor="@color/ublox_blue_color"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Device"
            android:textAllCaps="false"
            android:textColor="@color/gray_device_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:1C:2B:31:34:21"
            android:textAllCaps="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/device_bonded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bonded"
            android:textAllCaps="true"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvMesh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:text="@string/mesh_proxy"
        android:textAlignment="textEnd"
        android:textColor="@color/ublox_blue_color"
        android:visibility="gone" />


    <!--<CheckBox-->
        <!--android:clickable="false"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/cbSelected" />-->

</LinearLayout>